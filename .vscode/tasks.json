{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start continuous integration",
			"type": "shell",
			"command": "node_modules/karma/bin/karma start karma.conf.ts | awk '!/<Jasmine>/' | awk -f karma-output-transform.awk",
			"windows": {
				"command": "node .\\node_modules\\karma\\bin\\karma start karma.conf.ts | awk '!/<Jasmine>/' | awk -f karma-output-transform.awk",
			},
			"group": {
				"kind": "test",
				"isDefault": true,
			},
			"isBackground": true,
			"presentation": {
				"reveal": "silent",
			},
			"problemMatcher": {
				"severity": "warning",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/EuchreSolution/"
				],
				"applyTo": "allDocuments",
				"pattern": [
					{
						"regexp": "^TEST CASE FAILED: ([^:]+):(\\d+):(\\d+)",
						"file": 1,
						"line": 2,
						"column": 3,
					},
					{
						"regexp": "^([^E]|E[^N]|EN[^D]|END.).*",
						"message": 0,
						"loop": true,
					},
				],
				"background": {
					"activeOnStart": false,
					"beginsPattern": "PhantomJS .*LOG: ",
					"endsPattern": "PhantomJS .*Executed (\\d+) of ",
				},
			},
		},
		{
			"label": "Run mutation testing",
			"type": "shell",
			"command": "node_modules/.bin/stryker run && xdg-open '${workspaceFolder}/reports/mutation/html/GameScript/index.html'",
			"osx": {
				"command": "node_modules/.bin/stryker run && open '${workspaceFolder}/reports/mutation/html/GameScript/index.html'",
			},
			"windows": {
				"command": ".\\node_modules\\.bin\\stryker.cmd run; if ($?) { start '${workspaceFolder}\\reports\\mutation\\html\\GameScript\\index.html' }",
			},
			"group": "test",
			"isBackground": false,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
			},
		},
	],
}